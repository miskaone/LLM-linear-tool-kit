# Linear API Configuration
LINEAR_API_KEY=your_linear_api_key_here

# GitHub Integration - Organization-Wide Mode (Optional)
# Set these to enable organization-wide repository discovery
GITHUB_ORG=your_github_org_name
GITHUB_TOKEN=your_github_personal_access_token

# Deployment Mode: 'org-wide' (auto-discover repos) or 'per-repo' (explicit URLs)
# Default: 'per-repo'
DEPLOYMENT_MODE=org-wide

# Optional: Repository Cache TTL (milliseconds, default: 3600000 = 1 hour)
REPO_CACHE_TTL=3600000

# Optional: Session Configuration
SESSION_PERSISTENCE=memory
SESSION_CACHE_TTL=300

# Optional: Logging
LOG_LEVEL=info

# Optional: API Configuration
LINEAR_API_ENDPOINT=https://api.linear.app/graphql
